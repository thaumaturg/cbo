{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend: Launch (Scalar API)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "backend: build",
      "program": "${workspaceFolder}/backend/Cbo.API/bin/Debug/net9.0/Cbo.API.dll",
      "args": [],
      "cwd": "${workspaceFolder}/backend/Cbo.API",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+https?://\\S+",
        "uriFormat": "https://localhost:7053/scalar/"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": "Backend: Attach",
      "type": "coreclr",
      "request": "attach"
    },
    {
      "name": "Frontend: Launch Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "https://localhost:5173",
      "webRoot": "${workspaceFolder}/frontend/src",
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*"
      },
      "runtimeArgs": ["--incognito"],
      "preLaunchTask": "frontend: dev"
    },
    {
      "name": "Full Stack: Launch Chrome (Watch)",
      "type": "chrome",
      "request": "launch",
      "url": "https://localhost:7053",
      "webRoot": "${workspaceFolder}/frontend/src",
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*"
      },
      "runtimeArgs": ["--incognito"],
      "preLaunchTask": "Full Stack: Start Servers (Watch)"
    },
    {
      "name": "Full Stack: Launch Chrome (Run)",
      "type": "chrome",
      "request": "launch",
      "url": "https://localhost:7053",
      "webRoot": "${workspaceFolder}/frontend/src",
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*"
      },
      "runtimeArgs": ["--incognito"],
      "preLaunchTask": "Full Stack: Start Servers (Run)"
    }
  ]
}
