{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "backend: build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/backend/backend.sln",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": "backend: watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/backend/Cbo.API/Cbo.API.csproj",
        "--launch-profile",
        "https"
      ],
      "isBackground": true,
      "problemMatcher": {
        "owner": "dotnet-watch",
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "dotnet watch",
          "endsPattern": "Now listening on"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "group": "dev"
      }
    },
    {
      "label": "backend: run",
      "command": "dotnet",
      "type": "process",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/backend/Cbo.API/Cbo.API.csproj",
        "--launch-profile",
        "https"
      ],
      "isBackground": true,
      "problemMatcher": {
        "owner": "dotnet-run",
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Building\\.\\.\\.",
          "endsPattern": "Now listening on"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "group": "dev"
      }
    },
    {
      "label": "backend: ef migrations add",
      "command": "dotnet",
      "type": "process",
      "args": [
        "ef",
        "migrations",
        "add",
        "${input:migrationName}",
        "--project",
        "${workspaceFolder}/backend/Cbo.API/Cbo.API.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "backend: ef database update",
      "command": "dotnet",
      "type": "process",
      "args": [
        "ef",
        "database",
        "update",
        "--project",
        "${workspaceFolder}/backend/Cbo.API/Cbo.API.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "backend: ef database drop",
      "command": "dotnet",
      "type": "process",
      "args": [
        "ef",
        "database",
        "drop",
        "--force",
        "--project",
        "${workspaceFolder}/backend/Cbo.API/Cbo.API.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "frontend: dev",
      "type": "npm",
      "script": "dev",
      "path": "frontend",
      "isBackground": true,
      "problemMatcher": {
        "owner": "vite",
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "VITE",
          "endsPattern": "ready in"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "group": "dev"
      }
    },
    {
      "label": "frontend: build",
      "type": "npm",
      "script": "build",
      "path": "frontend",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "frontend: lint",
      "type": "npm",
      "script": "lint",
      "path": "frontend",
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "frontend: format",
      "type": "npm",
      "script": "format",
      "path": "frontend",
      "problemMatcher": []
    },
    {
      "label": "frontend: install",
      "type": "npm",
      "script": "install",
      "path": "frontend",
      "problemMatcher": []
    },
    {
      "label": "Build All",
      "dependsOn": ["backend: build", "frontend: build"],
      "dependsOrder": "parallel",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Full Stack: Start Servers (Watch)",
      "dependsOn": ["backend: watch", "frontend: dev"],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
    {
      "label": "Full Stack: Start Servers (Run)",
      "dependsOn": ["backend: run", "frontend: dev"],
      "dependsOrder": "sequence",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "migrationName",
      "description": "Name for the new migration",
      "type": "promptString",
      "default": "NewMigration"
    }
  ]
}
